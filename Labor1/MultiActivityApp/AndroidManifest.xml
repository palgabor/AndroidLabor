    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="hu.bute.daai.amorg.multiactivityapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="hu.bute.daai.amorg.multiactivityapp.SecondActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="hu.bute.daai.amorg.multiactivityapp.ThirdActivity"
            android:label="@string/popup_name"
            android:theme="@android:style/Theme.Dialog">
        </activity>
    </application>

</manifest>
